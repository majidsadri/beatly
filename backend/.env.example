# SoundCloud OAuth Credentials
# Get these from https://soundcloud.com/you/apps
SOUNDCLOUD_CLIENT_ID=your_client_id_here
SOUNDCLOUD_CLIENT_SECRET=your_client_secret_here
SOUNDCLOUD_REDIRECT_URI=http://localhost:5173/callback

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Cache Directories
CACHE_DIR=./cache
STEMS_DIR=./cache/stems
ANALYSIS_DIR=./cache/analysis

# Stem Separation (Demucs)
# Model options: htdemucs (default, 4 stems), htdemucs_ft (fine-tuned), mdx_extra
DEMUCS_MODEL=htdemucs
# Device: cpu or cuda (for GPU acceleration)
DEMUCS_DEVICE=cpu
